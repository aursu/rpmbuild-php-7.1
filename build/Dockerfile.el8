ARG centos=8
FROM aursu/rpmbuild:${centos}-build

USER root
RUN dnf -y install libzip \
    && dnf -y module disable php \
    && dnf -y --enablerepo=custom --enablerepo=bintray-custom install \
        php-cli \
        php-common \
        php-devel \
        php-process \
        php-xml \
    && dnf clean all && rm -rf /var/cache/dnf /var/lib/rpm/__db*
